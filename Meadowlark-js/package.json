{
  "name": "meadowlark-js",
  "description": "The Ed-Fi Meadowlark project",
  "private": true,
  "devDependencies": {
    "@shelf/jest-mongodb": "^2.2.2",
    "@types/eslint": "^8.4.1",
    "@types/jest": "27.4.1",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "5.21.0",
    "@typescript-eslint/parser": "5.21.0",
    "cross-env": "^7.0.3",
    "env-cmd": "^10.1.0",
    "eslint": "8.14.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-typescript": "3.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jasmine": "4.1.3",
    "eslint-plugin-json": "3.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "^7.0.4",
    "jest": "27.5.1",
    "jest-environment-node": "^27.0.0",
    "lerna": "^3.22.1",
    "mongodb": "^4.5.0",
    "pg": "^8.7.3",
    "pg-format": "^1.0.4",
    "prettier": "2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "8.8.1",
    "typescript": "4.6.3"
  },
  "workspaces": [
    "backends/*",
    "packages/*",
    "services/*",
    "tests/*"
  ],
  "scripts": {
    "build": "lerna run build --stream",
    "build:clean": "lerna run build:clean --stream",
    "test:all": "yarn test && yarn test:integration",
    "test": "yarn test:lint && yarn test:unit && yarn test:integration && yarn test:system",
    "test:lint": "yarn test:lint:ts && yarn test:lint:eslint",
    "test:lint:eslint": "eslint --max-warnings 0 --ext .js,.ts .",
    "test:lint:ts": "tsc -p . --noEmit",
    "test:unit": "cross-env NODE_OPTIONS=--max-old-space-size=4096 LOG_LEVEL=warn yarn jest --testPathIgnorePatterns=\"system|integration\"",
    "test:integration": "cross-env NODE_OPTIONS=--max-old-space-size=4096 LOG_LEVEL=warn yarn jest integration --runInBand",
    "test:system": "cross-env NODE_OPTIONS=--max-old-space-size=4096 LOG_LEVEL=warn yarn jest system --runInBand",
    "test:unit:coverage": "rimraf coverage/ && yarn test:unit --collectCoverage",
    "prepare": "cd .. && husky install"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test:lint"
    }
  },
  "packageManager": "yarn@3.2.1"
}
