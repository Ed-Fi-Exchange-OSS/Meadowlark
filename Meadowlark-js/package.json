{
  "name": "meadowlark-js",
  "private": true,
  "version": "0.1.0",
  "devDependencies": {
    "@types/jest": "25.1.4",
    "@types/node": "13.9.3",
    "@types/ramda": "0.27.0",
    "@typescript-eslint/eslint-plugin": "2.25.0",
    "@typescript-eslint/parser": "2.25.0",
    "copyfiles": "^2.1.0",
    "cross-env": "^7.0.3",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.1.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-config-typescript": "3.0.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jasmine": "4.1.0",
    "eslint-plugin-json": "2.1.1",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "^7.0.0",
    "jest": "25.1.0",
    "jsinspect": "^0.12.7",
    "lerna": "^3.1.4",
    "prettier": "2.0.2",
    "ts-jest": "25.2.1",
    "ts-node": "8.8.1",
    "typescript": "^3.7.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "yarn lerna bootstrap",
    "build": "lerna run build --stream",
    "build:clean": "lerna run build:clean --stream",
    "test": "yarn test:lint && cross-env NODE_OPTIONS=--max-old-space-size=4096 LOG_LEVEL=warn yarn jest",
    "test:lint": "yarn test:lint:ts && yarn test:lint:eslint",
    "test:lint:eslint": "eslint --max-warnings 0 --ext .js,.ts .",
    "test:lint:ts": "tsc -p . --noEmit",
    "test:unit": "cross-env NODE_OPTIONS=--max-old-space-size=4096 LOG_LEVEL=warn yarn jest --testPathIgnorePatterns ./*/integration/*",
    "test:integration": "cross-env NODE_OPTIONS=--max-old-space-size=4096 LOG_LEVEL=warn yarn jest ./*/integration/*/",
    "test:coverage": "yarn test:unit --collectCoverage",
    "prepare": "cd .. && husky install",
    "start:local": "cd packages/meadowlark && yarn start:local",
    "load:descriptors:local": "cd packages/meadowlark && yarn load:descriptors:local"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test:lint"
    }
  }
}
