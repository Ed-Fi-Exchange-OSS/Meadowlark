    "@opensearch-project/opensearch": "^2.1.0"
  },
  "devDependencies": {
    "@short.io/opensearch-mock": "^0.3.1",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.0.3",
    "rimraf": "^3.0.2",
    "testcontainers": "^9.1.2"
  }
}
